@inject IStringLocalizer<CommonResources> cl
@inject MapState MapState

<RadzenColumn Size="MapState.DialogIsFullscreen && !MapState.IsMobileBrowser ? 2 : 6">
    <a href="@Victim.Details" target="_blank" style="text-decoration:none;color:black">
        <RadzenCard  Style="height:200px" >
            <RadzenStack Orientation="Orientation.Vertical" Style="height:200px" AlignItems="AlignItems.Center">
            <RadzenImage Style="max-height:85%;max-width:100%;" Path="@(!string.IsNullOrEmpty(Victim.Photo) && Victim.Photo != "NULL" ? Victim.Photo : "images/face.png")" />
                <div class="rz-text-align-center" style="height:15%; width:100%"><small>@Victim.NameAndBirthDate</small></div>
            </RadzenStack>
        </RadzenCard>
    </a>
</RadzenColumn>

@code {
    [Parameter]
    public WMSFeatureInfo Victim { get; set; }

}
