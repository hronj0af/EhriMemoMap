                 class="@((MapService.DialogType == DialogTypeEnum.Layers ? "mobile-menu-icon-selected" : "mobile-menu-icon") + " " + (Border ? "mobile-menu-icon-border" : "") + " " + (Disabled ? "mobile-menu-icon-disabled" : ""))" 
