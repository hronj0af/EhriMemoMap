@code {
    [Parameter]
    public bool MobileVersion { get; set; } = false;

    [Parameter]
    public bool Border { get; set; } = false;

    [Parameter]
    public bool Disabled { get; set; } = false;

    private int width;

    IEnumerable<LayerModel>? layers;

    protected override async Task OnInitializedAsync()
    {
        width = await JS.InvokeAsync<int>("mapAPI.getWindowWidth");
        MapService.OnChange += OnMyChangeHandler;
    }

    public void Dispose()
    {
        MapService.OnChange -= OnMyChangeHandler;
    }


    private async void OnMyChangeHandler()
    {
        await InvokeAsync(() =>
        {
            layers = MapService.GetNotBaseLayers().ToList();
            StateHasChanged();
        });
    }

    private async Task ShowLayersList()
    {
        if (Disabled) return;
        
        await MapService.SetDialog(MapService.DialogType == DialogTypeEnum.Layers ? DialogTypeEnum.None : DialogTypeEnum.Layers);
        MapService.NotifyStateChanged();
    }
}