@inject MapStateService MapState

@if (MapState.IsMobileView == false && MapState.DialogType != DialogTypeEnum.NarrativeMap)
{
    <LayersQuickAccess />
}

@if (MapState.DialogType == DialogTypeEnum.NarrativeMap)
{
    <NarrativeMapButtons/>
}

@code {
    protected override void OnInitialized()
    {
        MapState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        MapState.OnChange -= StateHasChanged;
    }
}
