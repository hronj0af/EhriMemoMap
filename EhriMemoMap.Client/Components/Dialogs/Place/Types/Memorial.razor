@using System.Xml;
@using System.Xml.Linq;
@inject IStringLocalizer<CommonResources> cl

<RadzenRow class="rz-mb-4">
    <RadzenCard Style="width:100%">

        <h3>@(CultureInfo.CurrentCulture.Name == "en-US" ? Place.LabelEn : Place.LabelCs)</h3>
        <h5 class="rz-mb-4">
            @Place.Date?.ToString("d. M. yyyy"), @(CultureInfo.CurrentCulture.Name == "en-US" ? Place.AddressEn : Place.AddressCs)
        </h5>
        <p>
            @((MarkupString)((CultureInfo.CurrentCulture.Name == "en-US" ? Place.DescriptionEn?.Nl2Br() : Place.DescriptionCs?.Nl2Br()) ?? ""))
        </p>
        @{
            var link = CultureInfo.CurrentCulture.Name == "en-US" ? Place.LinkEn : Place.LinkCs;
        }
        @if (!string.IsNullOrEmpty(link))
        {
            <p>
                <a href="@link" target="_blank">@link</a>
            </p>
        }
        <DocumentGallery Documents="Place.Documents" />

    </RadzenCard>
</RadzenRow>

@code {
    [Parameter]
    public PlaceMemorial Place { get; set; }
}
