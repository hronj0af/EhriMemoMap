{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "rootDir": "wwwroot/js",
    "outDir": "wwwroot/js",
    "allowJs": true
  },
  "include": [
    "wwwroot/js/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}