@page "/"
@inject NavigationManager NavigationManager
@inject IConfiguration configuration
@inject IStringLocalizer<CommonResources> cl
@inject IJSRuntime JS
@inject MapService MapService
@inject DialogService _dialogService
@using Microsoft.Extensions.Configuration
@using System.Globalization
@using Microsoft.AspNetCore.Components

<div style="position:fixed; top:95px; right: 0px; width: 30px; z-index: 1000;">
        <LanguageButton />
</div>
<div style="position:fixed; top:35px; right: 17px; width: 30px; z-index: 1000;">
    <JoinButton />
</div>
@if (ShowingDetail)
{
    <div style="position:fixed; top:20px; left: 0px; width: 100px; z-index: 1000;">
        <RadzenButton Icon="arrow_back" Click="@HideDetail" class="back-btn" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" />
    </div>
    <div class="detail-container">


        <h1 class="main-title">@cl["memoMaps"]</h1>

        @if (!string.IsNullOrEmpty(DetailTitle))
        {
            <h2 class="detail-subtitle">@DetailTitle</h2>
        }
        <div class="detail-content">
            @((MarkupString)DetailContent)
        </div>

    </div>
}
else
{
    <div class="home-container">

        <h1 class="main-title">@cl["memoMaps"]</h1>

        <div class="intro-text">
            @((MarkupString)cl["welcomeText_short"].ToString())
            <div class="read-more-container">
                <RadzenButton Text="@cl["moreInfo"]" Click="@ShowWelcomeTextLong" class="info-btn" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Icon="info" />
            </div>
        </div>

        <RadzenRow Gap="1rem">
            @foreach (var city in Cities)
            {
                <RadzenColumn SizeLG="4" SizeSM="12" SizeMD="6">
                    <RadzenCard Style="height:200px;" class="rz-mb-12 rz-mt-4">
                        <div class="city-card" style="@($"background-image: linear-gradient(rgba(255, 255, 255, 0.7) 100%), url('images/welcome_image_{city.ToLower()}.jpg'); background-size: cover; background-position: center;")">
                            <h2 class="city-title">
                                @cl["city_" + city]
                                <RadzenButton Icon="arrow_forward" Click="@(() => NavigationManager.NavigateTo("/" + city, false))" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Style="vertical-align: middle; margin-left: 0.5rem;" />
                            </h2>
                            <p class="city-description">@((MarkupString)cl["welcomeText_" + city + "_short"].ToString())</p>
                            <div class="city-buttons">
                                <RadzenButton Text="@cl["moreInfo"]" Click="@(() => ShowCityInfo(city))" class="info-btn" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Icon="info" />
                                @* <RadzenButton Text="@cl["openMap"]" Click="@(() => NavigationManager.NavigateTo("/" + city, false))" class="open-map-btn rz-mt-4" /> *@
                            </div>
                        </div>
                    </RadzenCard>
                </RadzenColumn>
            }
        </RadzenRow>
    </div>
}

