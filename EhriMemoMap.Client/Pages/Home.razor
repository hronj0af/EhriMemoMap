            color: var(--Wine-Red);
        }
</style>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "detail")]
    public string? Detail { get; set; }

    private string[] Cities = Array.Empty<string>();
    private bool ShowingDetail = false;
    private string DetailTitle = "";
    private string DetailContent = "";

    protected override async Task OnInitializedAsync()
    {
        Cities = configuration.GetSection("App:Cities").Get<string[]>() ?? Array.Empty<string>();
        await MapService.Destroy();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await JS.InvokeVoidAsync("resetPageElementHeight");
    }

    protected override void OnParametersSet()
    {
        UpdateDetailFromParameter();
    }

    private void UpdateDetailFromParameter()
    {
        if (!string.IsNullOrEmpty(Detail))
        {
            if (Detail == "main")
            {
                DetailTitle = "";
                DetailContent = cl["welcomeText_long"].ToString();
                ShowingDetail = true;
            }
            else
            {
                DetailTitle = cl["city_" + Detail].ToString();
                DetailContent = cl["welcomeText_" + Detail + "_long"].ToString();
                ShowingDetail = true;
            }
        }
        else
        {
            ShowingDetail = false;
            DetailTitle = "";
            DetailContent = "";
        }
    }

    private string TargetLanguage => CultureInfo.CurrentCulture.Name == "cs-CZ" ? "EN" : "CS";

    private async Task ChangeLanguage()
    {
        var targetCulture = CultureInfo.CurrentCulture.Name == "cs-CZ" ? "en-US" : "cs-CZ";
        await JS.InvokeVoidAsync("mapAPI.setBlazorCulture", targetCulture);
        NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
    }

    private void ShowWelcomeTextLong()
    {
        NavigationManager.NavigateTo("/?detail=main");
    }

    private void ShowCityInfo(string city)
    {
        NavigationManager.NavigateTo($"/?detail={city}");
    }

    private void HideDetail()
    {
        NavigationManager.NavigateTo("/");
    }
}
